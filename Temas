    // Função para escolher um elemento aleatório de uma lista
    function getRandomElement(list) {
      var randomIndex = Math.floor(Math.random() * list.length);
      return list[randomIndex];
    }

    // Função para obter 3 personagens aleatórios sem repetição
    function getRandomCharacters() {
      var charactersCopy = characters.slice(); // Cria uma cópia da lista de personagens
      var randomCharacters = [];

      for (var i = 0; i < 3; i++) {
        var randomIndex = Math.floor(Math.random() * charactersCopy.length);
        var character = charactersCopy.splice(randomIndex, 1)[0]; // Remove o personagem escolhido da cópia
        randomCharacters.push(character);
      }

      return randomCharacters;
    }

    // Função para atualizar o tema e os personagens na página
    function updateGame() {
      var theme = getRandomElement(themes);
      var characters = getRandomCharacters();

      document.getElementById("theme").textContent = theme;
      document.getElementById("characters").innerHTML = "<li>" + characters[0] + "</li><li>" + characters[1] + "</li><li>" + characters[2] + "</li>";
    }

    // Função para gerar o jogo
    function generateGame() {
      updateGame();
    }

    // Chama a função para atualizar o jogo quando a página é carregada
    window.onload = updateGame;
